<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.chanapp.chanjet</groupId>
		<artifactId>cloud-app</artifactId>
		<version>csp.version</version>
	</parent>

	<artifactId>csp-import-test-seeddata</artifactId>
	<packaging>pom</packaging>
	<name>CSP App Import Test Seed Data</name>

	<build>
		<plugins>
			<plugin>
				<groupId>com.chanjet.csp</groupId>
				<artifactId>csp-app-test-plugin</artifactId>
				<configuration>
					<appId>${csp.cloud.app.cmr.applicationid}</appId>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>javax.servlet</groupId>
						<artifactId>javax.servlet-api</artifactId>
						<version>3.0.1</version>
					</dependency>
					<dependency>
						<groupId>com.fasterxml.jackson.core</groupId>
						<artifactId>jackson-core</artifactId>
						<version>\${fasterxml.version}</version>
					</dependency>
					<dependency>
						<groupId>com.fasterxml.jackson.core</groupId>
						<artifactId>jackson-annotations</artifactId>
						<version>\${fasterxml.version}</version>
					</dependency>
					<dependency>
						<groupId>com.fasterxml.jackson.core</groupId>
						<artifactId>jackson-databind</artifactId>
						<version>\${fasterxml.version}</version>
					</dependency>
					<dependency>
						<groupId>com.fasterxml.jackson.module</groupId>
						<artifactId>jackson-module-jaxb-annotations</artifactId>
						<version>\${fasterxml.version}</version>
					</dependency>
					<dependency>
						<groupId>com.fasterxml.jackson.dataformat</groupId>
						<artifactId>jackson-dataformat-xml</artifactId>
						<version>\${fasterxml.version}</version>
					</dependency>
					<dependency>
						<groupId>com.alibaba</groupId>
						<artifactId>fastjson</artifactId>
						<version>\${fastjson.version}</version>
					</dependency>
					<dependency>
						<groupId>org.slf4j</groupId>
						<artifactId>slf4j-api</artifactId>
						<version>1.7.5</version>
					</dependency>
					<dependency>
						<groupId>commons-logging</groupId>
						<artifactId>commons-logging</artifactId>
						<version>1.2</version>
					</dependency>
				</dependencies>
				<executions>
					<execution> <!-- copy config file & replace user (if newConfigJsonFile specified) -->
						<id>replace_config_user</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace_config_user</goal>
						</goals>
						<configuration>
							<configJsonFile>\${project.basedir}/config.json</configJsonFile>
							<newConfigJsonFile>\${newConfigJsonFile}</newConfigJsonFile>
							<targetJsonFile>\${project.build.directory}/config.json</targetJsonFile>
						</configuration>
					</execution>
					<execution> <!-- generate users properties for replace csv (USER.tagName=userId) -->
						<id>export_config_user_id</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>export_config_user_id</goal>
						</goals>
						<configuration>
							<configJsonFile>\${project.build.directory}/config.json</configJsonFile>
							<ccsPropertyFile>\${appRootDir}/WEB-INF/classes/ccs.properties</ccsPropertyFile>
							<authUserInConfigOnly>\${authUserInConfigOnly}</authUserInConfigOnly>
						</configuration>
					</execution>
					<execution> <!-- replace db connection properties -->
						<id>copy-db-connection-file</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace_property_file</goal>
						</goals>
						<configuration>
							<propertyFileName>\${project.basedir}/cmr_db_connection_for_install.properties</propertyFileName>
							<targetFileName>\${project.build.directory}/cmr_db_connection_for_install.properties</targetFileName>
							<replaceProperties>
								<hibernate.connection.username>\${dbUsername}</hibernate.connection.username>
								<hibernate.connection.password>\${dbPassword}</hibernate.connection.password>
								<hibernate.connection.url>\${dbUrl}</hibernate.connection.url>
							</replaceProperties>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution> <!-- replace user in csv files -->
						<id>copy-csv-replace-user</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>\${project.build.directory}/import/</outputDirectory>
							<resources>
								<resource>
									<directory>\${project.basedir}/import</directory>
									<includes>
										<include>*.csv</include>
									</includes>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin> <!-- zip csv file to import-test -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>zip-test-data-files</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classesDirectory>\${project.build.directory}/import</classesDirectory>
							<outputDirectory>\${project.build.directory}</outputDirectory>
							<finalName>${csp.cloud.app.cmr.applicationid}.dump</finalName>
							<includes>
								<include>*.csv</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>  <!-- Loading test data -->
				<groupId>com.chanjet.csp</groupId>
				<artifactId>csp-enterprise-data-plugin</artifactId>
				<configuration>
					<defaultUserId>1</defaultUserId>
					<importDirectory>\${project.build.directory}</importDirectory>
					<dbInfoProviderClass>com.chanjet.csp.dbpool.impl.DevDbInfoProvider</dbInfoProviderClass>
					<dbInfoDirectory>\${hibernateCfgDir}</dbInfoDirectory>
					<repositoryConfigFile>\${appRootDir}/WEB-INF/classes/Repository_Config.xml</repositoryConfigFile>
					<repositoryDBConfig>\${project.build.directory}/cmr_db_connection_for_install.properties</repositoryDBConfig>
				</configuration>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>seed_data_loader</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
